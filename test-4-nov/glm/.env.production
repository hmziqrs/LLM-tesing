# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:your-production-password@postgres:5432/glm-budget

# Authentication
AUTH_SECRET=change-this-in-production-to-a-long-random-string
AUTH_URL=https://yourdomain.com

# Application Configuration
PORT=3000
HOSTNAME=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# ORPC Configuration
ORPC_URL=https://yourdomain.com/api

# Logging Configuration
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=another-long-random-string-for-sessions

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External Services
UPTIME_KUMA_URL=https://uptime.your-monitoring.com

# SSL/HTTPS
FORCE_HTTPS=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_ENABLED=true