{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@glm/db": ["../../packages/db/src"],
			"@glm/db/*": ["../../packages/db/src/*"],
			"@glm/auth": ["../../packages/auth/src"]
		}
	},
	"include": ["src/**/*"],
	"references": [
		{ "path": "../db" },
		{ "path": "../auth" }
	]
}
