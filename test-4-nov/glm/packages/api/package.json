{
  "name": "@glm/api",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "devDependencies": {
    "tsdown": "^0.15.5",
    "vitest": "^4.0.7",
    "msw": "^2.11.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@orpc/server": "^1.10.0",
    "@orpc/client": "^1.10.0",
    "@orpc/openapi": "^1.10.0",
    "@orpc/zod": "^1.10.0",
    "hono": "^4.8.2",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11",
    "pino": "^9.6.0",
    "drizzle-orm": "^0.44.2",
    "@glm/auth": "workspace:*",
    "@glm/db": "workspace:*"
  }
}
