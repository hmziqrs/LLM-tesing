# Test Environment Configuration
NODE_ENV=test

# Database Configuration (test database)
DATABASE_URL=postgresql://postgres:test@localhost:5432/glm-budget-test

# Authentication (test values)
AUTH_SECRET=test-auth-secret-key
AUTH_URL=http://localhost:3000

# Application Configuration
PORT=3001
HOSTNAME=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ORPC Configuration
ORPC_URL=http://localhost:3001/api

# Logging Configuration (minimal logging for tests)
LOG_LEVEL=silent

# Session Configuration
SESSION_SECRET=test-session-secret

# File Upload Configuration
MAX_FILE_SIZE=1048576  # 1MB for tests
UPLOAD_DIR=./test-uploads

# Security (relaxed for tests)
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=1000

# Testing
MSW_ENABLED=true
MOCK_AUTH=true

# No external services in tests
REDIS_URL=
SMTP_HOST=
UPTIME_KUMA_URL=