{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@glm/db": ["../../packages/db/src"],
			"@glm/db/*": ["../../packages/db/src/*"],
			"@glm/api": ["../../packages/api/src"],
			"@glm/api/*": ["../../packages/api/src/*"],
			"@glm/auth": ["../../packages/auth/src"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"include": ["src/**/*"],
	"references": [
		{ "path": "../../packages/db" },
		{ "path": "../../packages/auth" },
		{ "path": "../../packages/api" }
	]
}
